/* pages/mine/mine.wxss */
page{
    background-color: #fff;
}
.header{
    width: 750rpx;
    height: 260rpx;
    background-color: #F49D19;
}
.login{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.nologin{
    display: flex;
    justify-content: center;
    align-items: center;
}
.header .header-nologin{
    width: 200rpx;
    height: 72rpx;
    background-color: rgba(255, 255, 255, .2);
    border-radius: 36rpx;
    border: 1rpx solid rgba(255, 255, 255, .2);
    font-size: 36rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}
.header image{
    width: 144rpx;
    height: 144rpx;
    border-radius: 72rpx;
    background-color: aliceblue;
    margin-left: 55rpx;
}
.header .header-info{
    height: 144rpx;
    margin-left: 21rpx;
    font-weight: 400;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 25rpx 0;
}
.header .header-info .header-mobile{
    font-size: 34rpx;
}
.header .header-info view{
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
}
.header .header-info view .header-name{
    font-size: 40rpx;
    line-height: 1;
}
.header .header-info view .header-position{
    font-size: 28rpx;
    margin-left: 30rpx;
    line-height: 1;
}
/* tabs */
.tabs{
    width: 730rpx;
    height: 108rpx;
    margin-left: 20rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid #ddd;
}
.tabs image{
    width: 30rpx;
    height: 30rpx;
}
.tabs text{
    margin-left: 12rpx;
    font-size: 28rpx;
    color: #101010;
}