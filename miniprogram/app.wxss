/**app.wxss**/
@import "./colorui.wxss";
@import "./icon.wxss";
@import "./utils/wxss/animation.wxss";
page{
    background-color: #f5f5f5;
    font-family: PingFangSC-Regular;
}
/* 暂无数据 */
.nodata{
	width: 750rpx;
	padding-top: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-flow: column;
}
.nodata image{
	width: 200rpx;
	height: 200rpx;
}
.nodata text{
	font-size: 30rpx;
	color: #ddd;
	line-height: 90rpx;
}
/* 列表加载 */
.loading{
	width: 750rpx;
	height: 90rpx;
	background-color: #f5f5f5;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 10rpx;
}
.loading .loading_img{
	width: 36rpx;
	height: 36rpx;
	animation: loading_img 10s linear infinite;
}
.loading text{
	font-size: 28rpx;
	color: #999;
	margin-left: 20rpx;
}
@keyframes loading_img{
	0%{
		transform: rotate(0);
	}
	50%{
		transform:rotate(1000deg);
	}
	100%{
		transform: rotate(360);
	}
}
